{% extends 'base.html.twig' %}

{% block title %}Détails pour {{entreprise.raisonSociale | capitalize}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    table th {text-align: right}
</style>

<div class="example-wrapper">
    <h1>Détails d'une entreprise ✅</h1>

    <table>
        <tbody>
            <tr>
                <th>Raison Sociale :</th>
                <td>{{entreprise.raisonSociale | upper}}</td>
            </tr>
            <tr>
                <th>N° Siret :</th>
                <td>{{entreprise.siret}}</td>
            </tr>
            <tr>
                <th>Liste des employés :</th>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td colspan=2>

                    <table>
                        <thead>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Date de Naissance</th>
                            <th>Date d'Embauche</th>
                        </thead>
                        <tbody>
                           {% for salarie in entreprise.salaries %}
                            <tr>
                                <td>{{salarie.nom | upper}}</td>
                                <td>{{salarie.prenom | capitalize}}</td>
                                <td>{{salarie.dateNaissance | date("d/m/Y")}}</td>
                                <td>{{salarie.dateEmbauche | date("d/m/Y")}}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </td>
            </tr>
        </tbody>
    </table>

</div>
{% endblock %}
