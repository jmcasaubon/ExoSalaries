{% extends 'base.html.twig' %}

{% block title %}Salariés{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    table th {text-align: right;}
</style>

<div class="example-wrapper">
    <h1>Liste des salariés ✅</h1>

    <table>
        <thead>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Date de Naissance</th>
            <th>Entreprise</th>
            <th>Date d'Embauche</th>
        </thead>
        <tbody>
            {% for salarie in salaries %}
            <tr>
                <td>{{salarie.nom | upper}}</td>
                <td>{{salarie.prenom | capitalize}}</td>
                <td>{{salarie.dateNaissance | date("d/m/Y")}}</td>
                <td>{{salarie.entreprise.raisonSociale | upper}}</td>
                <td>{{salarie.dateEmbauche | date("d/m/Y")}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
